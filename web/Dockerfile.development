# Use the official Node.js Alpine image
FROM node:20-alpine

# Install Java (required for OpenAPI Generator CLI)
RUN apt-get update && \
    apt-get install -y openjdk-17-jre-headless && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set the working directory inside the container
WORKDIR /app

# Copy package.json and package-lock.json to the working directory
COPY package*.json ./

# Install the application dependencies (including dev dependencies)
RUN npm install

# Copy the rest of the application files
COPY . .

# Create entrypoint script for auto-installing dependencies in root directory
RUN echo -e '#!/bin/sh\necho "ðŸ” Checking node_modules..."\ncd /app\nif [ ! -d "node_modules" ] || [ ! "$(ls -A node_modules 2>/dev/null)" ]; then\n  echo "ðŸ“¦ Installing dependencies..."\n  npm install\n  echo "âœ… Dependencies installed"\nelse\n  echo "âœ… Dependencies already exist"\nfi\necho "ðŸš€ Starting development server..."\nexec "$@"' > /entrypoint.sh && chmod +x /entrypoint.sh

# Expose the application port
EXPOSE 5173

# Set entrypoint and default command
ENTRYPOINT ["/entrypoint.sh"]
CMD ["npm", "run", "dev"] 