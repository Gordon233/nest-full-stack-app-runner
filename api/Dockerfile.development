# Use the official Node.js image as the base image
FROM node:20

# Set the working directory inside the container
WORKDIR /usr/src/app

# Copy package.json and package-lock.json to the working directory
COPY package*.json ./

# Install the application dependencies (including dev dependencies)
RUN npm install

# Install Nest CLI globally
RUN npm install -g @nestjs/cli

# Copy the rest of the application files
COPY . .

# Create entrypoint script for auto-installing dependencies in root directory
RUN echo '#!/bin/bash\necho "ðŸ” Checking node_modules..."\ncd /usr/src/app\nif [ ! -d "node_modules" ] || [ ! "$(ls -A node_modules 2>/dev/null)" ]; then\n  echo "ðŸ“¦ Installing dependencies..."\n  npm install\n  echo "âœ… Dependencies installed"\nelse\n  echo "âœ… Dependencies already exist"\nfi\necho "ðŸš€ Starting development server..."\nexec "$@"' > /entrypoint.sh && chmod +x /entrypoint.sh

# Expose the application port
EXPOSE 3000

# Set entrypoint and default command
ENTRYPOINT ["/entrypoint.sh"]
CMD ["npm", "run", "start:dev"] 